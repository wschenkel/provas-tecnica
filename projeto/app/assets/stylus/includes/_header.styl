header
	height: 53px
	background: $white
	display: flex
	align-items: center
	border-bottom: 1px solid $greey
	padding: 0 10px
	position: relative
	justify-content: center
 
	img 
		width: 100px 


.nav-colapse
	position: fixed
	top: 0
	left: 0
	z-index: 3
	height: 100vh 
	width: 70%
	background: $white
	padding: 20px
	transform: translateX(-115%)
	transition: all .3s ease-in-out

	&.nav-right
		display: none

	&.isOpen
		transform: translateX(0)

	ul
		display: table

	li
		list-style: none
		border-bottom: 1px solid $greey
		padding: 15px 0

	a
		text-decoration: none
		color: $blueDarken
		text-transform: uppercase
		display: block
		font-size: 13px
		font-weight: bold 
		padding-left: 10px
		transition: all .2s ease-in-out

		&:hover,
		&.active 
			color:$green

	.btn-my-account
		border: 0
		background: transparent
		margin-top: 25px
		display: block
		text-transform: uppercase
		padding-left: 10px
		color: $blueDarken

#btn-open-nav
	width: 26px
	height: 23px
	background: url('../images/btn-open.png') no-repeat -2px -1px
	border: 0
	position: absolute
	left: 10px
	cursor: pointer

#btn-close-nav
	width: 15px
	height: 15px
	border: 0
	z-index: 2
	position: absolute
	top: 15px
	right: -25px
	background: transparent
	text-align: center
	padding: 0
	font-size: 20px
	color: $green
 
#overlay
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 2
	background: $blackLighter

.hidden
	display: none


@media (min-width: 768px)

	.nav-colapse
		position: absolute
		width: auto
		top: auto
		left: 25px
		transform: none
		height: auto
		padding: 0

		&.nav-right
			left: auto
			right: 25px
			display: block

			li:last-child
				margin-right: 0
 
		.btn-my-account
			display: none

		li
			padding: 0
			float: left
			border: 0
			margin-right: 40px
		
		a
			padding: 0

	#btn-open-nav,
	#btn-close-nav
		display: none