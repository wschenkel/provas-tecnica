@import 'includes/_normalize'
@import 'includes/_fontawesome'
@import 'includes/_variables'
@import 'includes/_header'

// Main

.box-content
	padding: 0 10px
	margin-top: 20px

	h2
		margin: 0
		display: inline-block
		text-transform: uppercase
		color: $blueDarken
		font-size: 26px
		line-height: 30px
	
	form
		display inline-block
		float: right

.box-select
	border: 2px solid $greey
	height: 30px
	width: 160px
	
	select
		width: 100%
		height: 100%
		background: $white
		border: 0
		text-transform: uppercase
		padding: 0 6px
		font-size: 13px

.list-products
	padding: 10px 5px
	clear: both
	display: flex
	flex-wrap: wrap
	justify-content: space-around

	li
		margin: 0
		list-style: none
		width: 50%
		display: flex
		flex-direction: column
		padding: 5px

	figure
		max-width: 230px
		max-height: 230px
		width: 100%
		margin: 0
		background: url('../images/ajax-loader.gif') no-repeat center center

	img
		width: 100%

	strong
		text-align: center
		display: none
		font-size: 18px
		color: $blueDarken

	b
		text-align: center
		display: block
		font-size: 15px
		color: $blueDarken
		margin-top: 15px

#box-pagination
	display: table
	margin: 40px auto 30px

	li
		width: 30px
		height: 30px
		list-style: none
		float: left
		background: $white
		margin: 0 3px

		&.active
			background: $green

			a
				color:$white
		
		&.btn-prev,
		&.disabled
			background-color: $whiteLighter

			a
				color: $greeyDarker

		a
			display: block
			width: 100%
			height: 100%
			line-height: 34px
			text-align: center
			color: $blueDarken
			font-size: 16px
			text-decoration: none

@media (min-width: 768px)

	.box-select
		width: 200px

	.box-content
		padding: 0 25px

	.list-products
		padding-top: 45px

		strong
			display: block
			font-size: 13px
			margin-top: 10px
		
		b
			margin-top: 7px
			font-size: 13px
		
		li
			width: 275px
			padding-bottom: 35px
		
		figure
			max-width: 100%
			max-height: none
	
	#box-pagination
		li
			width: 40px
			height: 40px
			margin: 0 10px

			a
				line-height: 40px